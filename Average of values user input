#include <iostream>
using namespace std;

int main()
{
      double num1, num2, num3, num4, num5, sum, average;

      cout << "This program calculates the average of 5 numbers." << endl << endl;
      cout << "Enter five numbers and press the ENTER key after each number:" <<
endl;

      cin >> num1;
      cin >> num2;
      cin >> num3;
      cin >> num4;
      cin >> num5;
      
      sum = num1 + num2 + num3 + num4 + num5;
      average = sum / 5;
      
      cout << "Numbers entered: " << num1 << "\t" << num2 << "\t" << num3 << "\t"
           << num4 << "\t" << num5 << endl << endl;

      cout << "The sum of the five numbers is: " << sum << endl << endl;
      cout << "The average of the five numbers is : " << average << endl << endl;
      
      system("pause");
      return 0; 
}

