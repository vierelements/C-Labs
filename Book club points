* Description: Program shows how many points customers earn based on how many books they bought.
* Limitations or issues: n/a
* Credits: None
*/

#include <iostream>
using namespace std;

int main()
{
      //points awarded for books bought
      const double BOOK0 = 0,
            BOOK1 = 5,
            BOOK2 = 15,
            BOOK3 = 30,
            BOOK4 = 60;
            
      //books user bought
      double bookBought;
      
      //asking how many books were bought
      cout << "How many books did you buy this month?" << endl;
      cin >> bookBought;
      
      // deciding how many points awarded
      if (bookBought == 0)
      {
            cout << "You earned " << BOOK0 << " points." << endl;
      }
      else if (bookBought == 1)
      {
            cout << "You earned " << BOOK1 << " points." << endl;
      }
      else if (bookBought == 2)
      {
           cout << "You earned " << BOOK2 << " points." << endl;
      }
      else if (bookBought == 3)
      {
           cout << "You earned " << BOOK3 << " points." << endl;
      }
      else if (bookBought >= 4)
      {
      cout << "You earned " << BOOK4 << " points." << endl;
      }
      else 
      {
      cout << "Please enter a valid number of books bought." << endl;
      }
      
      system("pause");
      return 0;
}

